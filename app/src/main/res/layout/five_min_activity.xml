<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imageViewdarkblue"
            android:layout_width="430dp"
            android:layout_height="889dp"
            android:src="@drawable/ellipse_dark_blue"
            tools:ignore="MissingConstraints" />
        <ImageView
            android:id="@+id/imageViewlightblue"
            android:layout_width="430dp"
            android:layout_height="889dp"
            android:src="@drawable/ellipse_light_blue"
            tools:ignore="MissingConstraints" />
        <ImageView
            android:layout_width="270dp"
            android:layout_height="70dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/brainteaser"
            android:translationZ="10dp" />
        <TextView
            android:id="@+id/LetsStart"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="25dp"
            android:fontFamily="arial"
            android:text="Let's Start!"
            android:textColor="@color/black"
            android:textFontWeight="600"
            android:textSize="40sp"
            android:translationZ="100dp" />
        <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="98dp"
        android:layout_marginLeft="230dp"
        android:id="@+id/timerbtn"
            android:text="Start Timer"
        android:backgroundTint="@color/button_background_color"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="60dp"
            android:id="@+id/textView"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="25sp" />
        <!-- GIF -->
        <pl.droidsonroids.gif.GifImageView
            android:layout_width="350dp"
            android:layout_height="200dp"
            android:layout_marginLeft="30dp"
            android:translationZ="10dp"
            android:layout_marginTop="170dp"
            android:src="@drawable/warriorworkout"/>

        <pl.droidsonroids.gif.GifImageView
            android:layout_width="350dp"
            android:layout_height="200dp"
            android:layout_marginLeft="30dp"
            android:translationZ="10dp"
            android:layout_marginTop="390dp"
            android:src="@drawable/standworkout"/>
    </RelativeLayout>
</LinearLayout>