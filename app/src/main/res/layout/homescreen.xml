<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/imageViewdarkblue"
        android:layout_width="430dp"
        android:layout_height="889dp"
        android:src="@drawable/ellipse_dark_blue"
        tools:ignore="MissingConstraints" />
    <ImageView
        android:id="@+id/imageViewlightblue"
        android:layout_width="430dp"
        android:layout_height="889dp"
        android:src="@drawable/ellipse_light_blue"
        tools:ignore="MissingConstraints" />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/Hello"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="25dp"
            android:fontFamily="arial"
            android:text="Hello Jack"
            android:textColor="@color/black"
            android:textFontWeight="600"
            android:textSize="40sp"
            android:translationZ="100dp" />

        <TextView
            android:id="@+id/Quote"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="220dp"
            android:fontFamily="arial"
            android:text="&quot;Quote for the day&quot;"
            android:textColor="@color/black"
            android:textFontWeight="800"
            android:textSize="40sp"
            android:translationZ="100dp" />
        <Button
            android:id="@+id/quote_area"
            android:layout_width="340dp"
            android:layout_height="150dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="270dp"
            android:backgroundTint="@color/white"
            app:strokeColor="#00ACC1"
            app:strokeWidth="8dp"
            >
        </Button>

        <TextView
            android:id="@+id/dynamic_quote"
            android:layout_width="319dp"
            android:layout_height="102dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="295dp"
            android:fontFamily="arial"
            android:textColor="@color/black"
            android:textFontWeight="800"
            android:textSize="25sp"
            android:translationZ="70dp" />
        <TextView
            android:id="@+id/BrainTeaser_"
            android:layout_width="360dp"
            android:layout_height="50dp"
            android:layout_marginLeft="95dp"
            android:layout_marginRight="75dp"
            android:layout_marginTop="440dp"
            android:fontFamily="arial"
            android:text="Brain Teaser ?"
            android:textColor="@color/black"
            android:textFontWeight="800"
            android:textSize="35sp"
            android:translationZ="100dp"/>
        <ImageView
            android:layout_width="340dp"
            android:layout_height="50dp"
            android:layout_marginLeft="40dp"
            android:translationZ="10dp"
            android:layout_marginTop="440dp"
            android:src="@drawable/brainteaser"/>
        <Button
            android:id="@+id/brain_teaser"
            android:layout_width="340dp"
            android:layout_height="150dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="500dp"
            android:backgroundTint="@color/white"
            app:strokeColor="#00ACC1"
            app:strokeWidth="8dp">
        </Button>
        <TextView
            android:id="@+id/dynamic_teaser"
            android:layout_width="310dp"
            android:layout_height="100dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="520dp"
            android:fontFamily="arial"
            android:textColor="@color/black"
            android:textFontWeight="800"
            android:textSize="17sp"
            android:translationZ="70dp" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginLeft="40dp"
            android:translationZ="10dp"
            android:layout_marginTop="90dp"
            android:src="@drawable/schedule"/>
        <Button
            android:id="@+id/btnforsync"
            android:layout_width="260dp"
            android:layout_height="100dp"
            android:layout_marginLeft="-50dp"
            android:layout_marginTop="100dp"
            android:backgroundTint="@color/button_background_color">
        </Button>
            <TextView
                android:id="@+id/startsync"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:text="Start sync"
                android:textSize="35sp"
                android:translationZ="100dp"
                android:layout_marginLeft="-205dp"
                android:layout_marginTop="100dp"
                android:fontFamily="arial"
                android:textColor="@color/button_text_color"
                android:textFontWeight="1000"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>