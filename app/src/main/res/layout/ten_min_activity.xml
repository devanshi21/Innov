<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imageViewdarkblue"
            android:layout_width="430dp"
            android:layout_height="889dp"
            android:src="@drawable/ellipse_dark_blue"
            tools:ignore="MissingConstraints" />
        <ImageView
            android:id="@+id/imageViewlightblue"
            android:layout_width="430dp"
            android:layout_height="889dp"
            android:src="@drawable/ellipse_light_blue"
            tools:ignore="MissingConstraints" />
        <ImageView
            android:layout_width="270dp"
            android:layout_height="70dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/brainteaser"
            android:translationZ="10dp" />
        <TextView
            android:id="@+id/StartExcercise"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="25dp"
            android:fontFamily="arial"
            android:text="Start Excersice"
            android:textColor="@color/black"
            android:textFontWeight="600"
            android:textSize="35sp"
            android:translationZ="100dp" />
        <com.google.android.youtube.player.YouTubePlayerView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_marginTop="150dp"
            android:layout_marginLeft="50dp"
            android:id="@+id/YoutubePlayerView"/>
        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="450dp"
            android:layout_marginLeft="150dp"
            android:text="Play"
            android:backgroundTint="@color/button_background_color"
            android:id="@+id/playbtn"/>
    </RelativeLayout>
</LinearLayout>